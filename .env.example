# BaleyUI Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string
# Local: postgresql://user:password@localhost:5432/baleyui
# Neon: postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/baleyui?sslmode=require
# Supabase: postgresql://postgres:[password]@db.[ref].supabase.co:5432/postgres
DATABASE_URL="postgresql://user:password@localhost:5432/baleyui"

# =============================================================================
# AUTHENTICATION - Clerk (Required)
# =============================================================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk redirect URLs (optional, defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/blocks"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/blocks"

# =============================================================================
# REDIS - Upstash (Optional)
# =============================================================================
# For caching, rate limiting, and real-time features
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# =============================================================================
# ENCRYPTION (Required for storing user API keys)
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# =============================================================================
# LLM PROVIDERS (Optional - users add their own via UI)
# =============================================================================
# These are only used for platform-level features (internal bots)
# Users will add their own API keys through the Connections UI

# OpenAI (for internal platform bots)
# OPENAI_API_KEY="sk-..."

# Anthropic (for internal platform bots)
# ANTHROPIC_API_KEY="sk-ant-..."

# =============================================================================
# OLLAMA (Optional)
# =============================================================================
# If running Ollama locally for development
OLLAMA_BASE_URL="http://localhost:11434"

# =============================================================================
# APP CONFIG
# =============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="BaleyUI"

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Set to 'development' for local, 'production' for deployed
NODE_ENV="development"
