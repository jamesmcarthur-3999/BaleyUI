{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@baleyui/db": ["../../packages/db/src"],
      "@baleyui/db/*": ["../../packages/db/src/*"],
      "@baleybots/tools/dsl/lexer": ["../../packages/baleybots/typescript/packages/tools/dist/types/baleybots-dsl-v2/lexer.d.ts"],
      "@baleybots/tools/dsl/parser": ["../../packages/baleybots/typescript/packages/tools/dist/types/baleybots-dsl-v2/parser.d.ts"],
      "@baleybots/tools/dsl/types": ["../../packages/baleybots/typescript/packages/tools/dist/types/baleybots-dsl-v2/types.d.ts"],
      "@baleybots/tools/dsl/type-builder": ["../../packages/baleybots/typescript/packages/tools/dist/types/baleybots-dsl-v2/type-builder.d.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/lib/voice/speech.d.ts"],
  "exclude": ["node_modules", "tests/e2e"]
}
