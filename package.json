{
  "name": "baleyui",
  "version": "0.1.0",
  "private": true,
  "description": "Visual platform for building, composing, and evolving AI-powered workflows",
  "author": "James McArthur",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @baleyui/web dev",
    "build": "pnpm --filter @baleyui/web build",
    "start": "pnpm --filter @baleyui/web start",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "pnpm --filter @baleyui/web test",
    "test:watch": "pnpm --filter @baleyui/web test:watch",
    "test:coverage": "pnpm --filter @baleyui/web test:coverage",
    "db:generate": "pnpm --filter @baleyui/db db:generate",
    "db:migrate": "pnpm --filter @baleyui/db db:migrate",
    "db:push": "pnpm --filter @baleyui/db db:push",
    "db:studio": "pnpm --filter @baleyui/db db:studio"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "happy-dom": "^20.0.11",
    "vitest": "^4.0.16"
  }
}
